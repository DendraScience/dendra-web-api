{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "som.update.json",
  "$patch": {
    "source": {"$ref": "som.json#"},
    "with": [
      {
        "op": "replace",
        "path": "/properties",
        "value": {
          "_id": {"$ref": "#/definitions/_id"},
          "name": {"$ref": "#/definitions/name"}
        }
      }
    ]
  }
}