{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "membership.patch.json",
  "$patch": {
    "source": {"$ref": "membership.json#"},
    "with": [
      {
        "op": "remove",
        "path": "/required"
      },
      {
        "op": "replace",
        "path": "/properties",
        "value": {
          "$set": {
            "properties": {
              "roles": {"$ref": "types.json#/definitions/unset"}
            },
            "type": "object"
          }
        }
      }
    ]
  }
}