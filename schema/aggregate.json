{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "aggregate.json",
  "title": "Aggregate",
  "description": "A definition for an automated data agregate calculation.",
  "type": "object",
  "definitions": {
    "_id": {
      "$ref": "types.json#/definitions/aggregateId"
    },
    "auth_info": {
      "type": "object",
      "description": "System generated information about this aggregate's authentication",
      "example": {
        "jwt": "TOKEN"
      }
    },
    "build_at": {
      "$ref": "types.json#/definitions/isoDatetimeUTC",
      "description": "When this aggregate is scheduled to be built"
    },
    "build_every": {
      "type": "string",
      "description": "How often this aggregate should be automatically rebuilt",
      "example": "1_d",
      "pattern": "^[0-9]+_[mhdwMQy]$"
    },
    "build_info": {
      "type": "object",
      "description": "System generated information about this aggregate's build cycle",
      "example": {
        "request_subject": "dendra.aggregateBuild.v1.req",
        "requested_at": "2017-05-11T00:00:00Z"
      }
    },
    "description": {
      "$ref": "types.json#/definitions/description",
      "example": "Blue Oak Ranch daily cumulative precipitation."
    },
    "expires_at": {
      "$ref": "types.json#/definitions/isoDatetimeUTC",
      "description": "When this aggregate definition is scheduled to be groomed"
    },
    "method": {
      "type": "string",
      "description": "The aggregation method to invoke when building the aggregate",
      "example": "rollupDatapoints"
    },
    "name": {
      "type": "string",
      "example": "Daily Cumulative Precipitation"
    },
    "spec": {
      "type": "object",
      "description": "A unique user-provided specification passed to the aggregation method",
      "example": {
        "big_math": true,
        "query": {
          "datastream_id": "5ae879c9fe27f428ce102df9",
          "time_local": true
        },
        "rollups": [
          {
            "aggregations": [
              {
                "alias": "v_sum",
                "field": "v",
                "filter": "optional",
                "func": "sum"
              }
            ],
            "window": "1_h"
          }
        ],
        "shift": "so_M",
        "time_cursor": "1_d",
        "time_gte": "2017-01-01",
        "time_lt": "2018-01-01"
      }
    }
  },
  "additionalProperties": false,
  "properties": {
    "_id": {"$ref": "#/definitions/_id"},
    "auth_info": {"$ref": "#/definitions/auth_info"},
    "build_at": {"$ref": "#/definitions/build_at"},
    "build_every": {"$ref": "#/definitions/build_every"},
    "build_info": {"$ref": "#/definitions/build_info"},
    "created_at": {"$ref": "types.json#/definitions/createdAt"},
    "created_by": {"$ref": "types.json#/definitions/createdBy"},
    "description": {"$ref": "#/definitions/description"},
    "expires_at": {"$ref": "#/definitions/expires_at"},
    "method": {"$ref": "#/definitions/method"},
    "name": {"$ref": "#/definitions/name"},
    "spec": {"$ref": "#/definitions/spec"},
    "updated_at": {"$ref": "types.json#/definitions/updatedAt"},
    "updated_by": {"$ref": "types.json#/definitions/updatedBy"}
  },
  "required": [
    "_id",
    "method",
    "spec"
  ],
  "links": [
    {
      "title": "Create aggregate",
      "description": "Create a new aggregate.",
      "rel": "self",
      "href": "aggregates",
      "method": "POST",
      "schema": {
        "type": "object",
        "properties": {
          "_id": {"$ref": "#/definitions/_id"},
          "build_at": {"$ref": "#/definitions/build_at"},
          "build_every": {"$ref": "#/definitions/build_every"},
          "description": {"$ref": "#/definitions/description"},
          "expires_at": {"$ref": "#/definitions/expires_at"},
          "method": {"$ref": "#/definitions/method"},
          "name": {"$ref": "#/definitions/name"},
          "spec": {"$ref": "#/definitions/spec"}
        },
        "required": [
          "_id",
          "method",
          "spec"
        ]
      },
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Patch aggregate",
      "description": "Patch an existing aggregate.",
      "rel": "self",
      "href": "aggregates/{#/definitions/_id}",
      "method": "PATCH",
      "schema": {
        "type": "object",
        "properties": {
          "build_at": {"$ref": "#/definitions/build_at"},
          "build_every": {"$ref": "#/definitions/build_every"},
          "build_info": {"$ref": "#/definitions/build_info"},
          "description": {"$ref": "#/definitions/description"},
          "expires_at": {"$ref": "#/definitions/expires_at"},
          "name": {"$ref": "#/definitions/name"}
        }
      },
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Remove aggregate",
      "description": "Remove an existing aggregate.",
      "rel": "self",
      "href": "aggregates/{#/definitions/_id}",
      "method": "DELETE",
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Aggregate info",
      "description": "Return a specific aggregate.",
      "rel": "self",
      "href": "aggregates/{#/definitions/_id}",
      "method": "GET",
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "List aggregates",
      "description": "Find one or more aggregates based on the query parameters.",
      "rel": "instances",
      "href": "aggregates",
      "method": "GET",
      "schema": {
        "$ref": "types.json#/definitions/queryParameters"
      },
      "targetSchema": {
        "allOf": [
          {"$ref": "types.json#/definitions/paginationMeta"},
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {"rel": "self"}
              }
            }
          }
        ]
      }
    },
    {
      "title": "Request aggregate",
      "description": "Request an aggregate result. Creates and builds the aggregate if it does not exist.",
      "rel": "self",
      "href": "aggregates/request",
      "method": "POST",
      "schema": {
        "type": "object",
        "properties": {
          "build_at": {"$ref": "#/definitions/build_at"},
          "build_every": {"$ref": "#/definitions/build_every"},
          "description": {"$ref": "#/definitions/description"},
          "expires_at": {"$ref": "#/definitions/expires_at"},
          "method": {"$ref": "#/definitions/method"},
          "name": {"$ref": "#/definitions/name"},
          "spec": {"$ref": "#/definitions/spec"}
        },
        "required": [
          "method",
          "spec"
        ]
      },
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Aggregate result",
      "description": "Request a specific pre-built aggregate result.",
      "rel": "self",
      "href": "aggregates/result/{#/definitions/_id}",
      "method": "GET",
      "targetSchema": {
        "type": "object",
        "properties": {
          "request": {
            "type": "object",
            "properties": {
              "_id": {"$ref": "#/definitions/_id"},
              "auth_info": {"$ref": "#/definitions/auth_info"},
              "build_at": {"$ref": "#/definitions/build_at"},
              "build_every": {"$ref": "#/definitions/build_every"},
              "build_info": {"$ref": "#/definitions/build_info"},
              "created_at": {"$ref": "types.json#/definitions/createdAt"},
              "created_by": {"$ref": "types.json#/definitions/createdBy"},
              "description": {"$ref": "#/definitions/description"},
              "expires_at": {"$ref": "#/definitions/expires_at"},
              "method": {"$ref": "#/definitions/method"},
              "name": {"$ref": "#/definitions/name"},
              "spec": {"$ref": "#/definitions/spec"},
              "updated_at": {"$ref": "types.json#/definitions/updatedAt"},
              "updated_by": {"$ref": "types.json#/definitions/updatedBy"}
            }
          },
          "result": {
            "type": "object",
            "example": {
              "build_info": {
                "duration": 13336,
                "finished_at": "2018-06-25T18:49:43.705Z",
                "started_at": "2018-06-25T18:49:30.369Z"
              },
              "data": []
            }
          }
        }
      }
    }
  ]
}