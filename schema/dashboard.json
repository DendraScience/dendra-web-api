{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "dashboard.json",
  "title": "Dashboard",
  "description": "A collection of graphs and widgets displaying realtime data.",
  "type": "object",
  "definitions": {
    "_id": {
      "$ref": "types.json#/definitions/dashboardId"
    },
    "content": {
      "type": "object",
      "description": "Layout and component configuration used for rendering the dashboard",
      "additionalProperties": false,
      "properties": {
        "rows": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "classes": {
                "$ref": "types.json#/definitions/cssClasses"
              },
              "columns": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "classes": {
                      "$ref": "types.json#/definitions/cssClasses"
                    },
                    "component": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "classes": {
                          "$ref": "types.json#/definitions/cssClasses"
                        },
                        "id": {
                          "type": "string",
                          "example": "soilTempsChart"
                        },
                        "name": {
                          "type": "string",
                          "example": "Highchart"
                        },
                        "options": {
                          "type": "object",
                          "example": {
                            "chart": {
                              "title": {
                                "text": "Air Temperature"
                              }
                            },
                            "colors": [
                              "#dcac5c",
                              "#615c42"
                            ]
                          }
                        },
                        "style": {
                          "$ref": "types.json#/definitions/cssStyle"
                        },
                        "topic": {
                          "type": "string",
                          "example": "soilTemps"
                        }
                      },
                      "required": [
                        "name",
                        "topic"
                      ]
                    },
                    "style": {
                      "$ref": "types.json#/definitions/cssStyle"
                    },
                    "title": {
                      "type": "string",
                      "example": "Col title"
                    }
                  },
                  "required": [
                    "component"
                  ]
                }
              },
              "style": {
                "$ref": "types.json#/definitions/cssStyle"
              },
              "title": {
                "type": "string",
                "example": "Row title"
              }
            },
            "required": [
              "columns"
            ]
          }
        }
      }
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether this dashboard is enabled (shown) in any user interface",
      "example": true
    },
    "name": {
      "type": "string",
      "example": "Well Status"
    },
    "organization_id": {
      "$ref": "types.json#/definitions/organizationId",
      "description": "The organization to which a dashboard belongs"
    },
    "slug": {
      "$ref": "types.json#/definitions/slug",
      "example": "well-status"
    },
    "sort_value": {
      "type": "integer",
      "description": "A numeric value that controls how the dashboard is ordered in lists",
      "example": 10
    },
    "sources": {
      "type": "array",
      "description": "Fetching and publishing configuration for populating dashboard components",
      "example": [
        {
          "after_fetch_hook": "seriesAsc",
          "assign_hook": "result",
          "before_fetch_hook": "seriesAsc",
          "clear_hook": "channel",
          "fetch_hook": "result",
          "find_actions": [
            {
              "options": {},
              "path": "/datapoints/lookup",
              "query": {
                "_id": [
                  "592f155746a1b867a114e020"
                ]
              }
            }
          ],
          "guard_hook": "seriesAsc",
          "key": "soilTemps",
          "options": {
            "cursorDate": [
              {
                "m": "add",
                "p": [
                  4,
                  "d"
                ]
              }
            ],
            "endDate": [
              {
                "m": "startOf",
                "p": "d"
              },
              {
                "m": "add",
                "p": [
                  1,
                  "d"
                ]
              }
            ],
            "startDate": [
              {
                "m": "startOf",
                "p": "d"
              },
              {
                "m": "subtract",
                "p": [
                  13,
                  "d"
                ]
              }
            ],
            "useWallTime": true
          },
          "query_builder": "seriesAsc",
          "template": "seriesAsc",
          "topic": "soilTemps"
        }
      ],
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "after_fetch_hook": {
            "type": "string"
          },
          "assign_hook": {
            "type": "string"
          },
          "before_fetch_hook": {
            "type": "string"
          },
          "clear_hook": {
            "type": "string"
          },
          "fetch_hook": {
            "type": "string"
          },
          "find_actions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "options": {
                  "type": "object"
                },
                "path": {
                  "type": "string"
                },
                "query": {
                  "type": "object"
                }
              },
              "required": [
                "path",
                "query"
              ]
            }
          },
          "guard_hook": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "options": {
            "type": "object"
          },
          "query_builder": {
            "type": "string"
          },
          "template": {
            "type": "string"
          },
          "topic": {
            "type": "string"
          }
        },
        "required": [
          "topic"
        ]
      }
    },
    "station_id": {
      "$ref": "types.json#/definitions/stationId",
      "description": "The station to which a dashboard belongs"
    },
    "utc_offset": {
      "$ref": "types.json#/definitions/utcOffset"
    }
  },
  "additionalProperties": false,
  "properties": {
    "_id": {"$ref": "#/definitions/_id"},
    "created_at": {"$ref": "types.json#/definitions/createdAt"},
    "updated_at": {"$ref": "types.json#/definitions/updatedAt"},
    "content": {"$ref": "#/definitions/content"},
    "enabled": {"$ref": "#/definitions/enabled"},
    "name": {"$ref": "#/definitions/name"},
    "organization_id": {"$ref": "#/definitions/organization_id"},
    "slug": {"$ref": "#/definitions/slug"},
    "sort_value": {"$ref": "#/definitions/sort_value"},
    "sources": {"$ref": "#/definitions/sources"},
    "station_id": {"$ref": "#/definitions/station_id"},
    "utc_offset": {"$ref": "#/definitions/utc_offset"}
  },
  "required": [
    "enabled",
    "name"
  ],
  "links": [
    {
      "title": "Create dashboard",
      "description": "Create a new dashboard.",
      "rel": "self",
      "href": "dashboards",
      "method": "POST",
      "required": [
        "enabled",
        "name"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "content": {"$ref": "#/definitions/content"},
          "enabled": {"$ref": "#/definitions/enabled"},
          "name": {"$ref": "#/definitions/name"},
          "organization_id": {"$ref": "#/definitions/organization_id"},
          "slug": {"$ref": "#/definitions/slug"},
          "sort_value": {"$ref": "#/definitions/sort_value"},
          "sources": {"$ref": "#/definitions/sources"},
          "station_id": {"$ref": "#/definitions/station_id"},
          "utc_offset": {"$ref": "#/definitions/utc_offset"}
        }
      },
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Update dashboard",
      "description": "Update an existing dashboard.",
      "rel": "self",
      "href": "dashboards/{#/definitions/_id}",
      "method": "PUT",
      "required": [
        "enabled",
        "is_active",
        "is_stationary",
        "name",
        "station_type",
        "time_zone",
        "utc_offset"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "content": {"$ref": "#/definitions/content"},
          "enabled": {"$ref": "#/definitions/enabled"},
          "name": {"$ref": "#/definitions/name"},
          "organization_id": {"$ref": "#/definitions/organization_id"},
          "slug": {"$ref": "#/definitions/slug"},
          "sort_value": {"$ref": "#/definitions/sort_value"},
          "sources": {"$ref": "#/definitions/sources"},
          "station_id": {"$ref": "#/definitions/station_id"},
          "utc_offset": {"$ref": "#/definitions/utc_offset"}
        }
      },
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Remove dashboard",
      "description": "Remove an existing dashboard.",
      "rel": "self",
      "href": "dashboards/{#/definitions/_id}",
      "method": "DELETE",
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "Dashboard info",
      "description": "Return a specific dashboard.",
      "rel": "self",
      "href": "dashboards/{#/definitions/_id}",
      "method": "GET",
      "targetSchema": {"rel": "self"}
    },
    {
      "title": "List dashboards",
      "description": "Find one or more dashboards based on the query parameters.",
      "rel": "instances",
      "href": "dashboards",
      "method": "GET",
      "schema": {
        "$ref": "types.json#/definitions/queryParameters"
      },
      "targetSchema": {
        "allOf": [
          {"$ref": "types.json#/definitions/paginationMeta"},
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {"rel": "self"}
              }
            }
          }
        ]
      }
    }
  ]
}